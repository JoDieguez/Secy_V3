<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_alertas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#2A3940">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#115771"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/safety"
            tools:ignore="ContentDescription" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:text="SeCy"
            android:textAlignment="center"
            android:textSize="30sp"
            android:fontFamily="sans-serif-black"
            android:textColor="#FFEDED"
            android:layout_marginTop="22dp"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="100dp"
        android:layout_marginBottom="440dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:background="@color/white">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="85dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/luz"
                    tools:ignore="ContentDescription,HardcodedText,ImageContrastCheck" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textAlignment="center"
                        android:textSize="25dp"
                        android:textColor="@color/black"
                        tools:ignore="SpUsage" />

                    <Button
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#DD4126"
                        android:clickable="true"
                        android:text="Activar Alerta Lumínica"
                        android:textColor="#000000"
                        tools:ignore="HardcodedText"
                        android:onClick="activarLuz"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="100dp"
        android:layout_marginBottom="295dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:background="@color/white">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/sonido"
                    tools:ignore="ContentDescription,ImageContrastCheck" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textAlignment="center"
                        android:textSize="25dp"
                        android:textColor="@color/black"
                        tools:ignore="SpUsage" />

                    <Button

                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#DD4126"
                        android:text="Activar Alerta Sonora"
                        android:textColor="#000000"
                        tools:ignore="HardcodedText"
                        android:onClick="activarSonido"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#115771">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="50dp"
            app:srcCompat="@drawable/fingerprint"
            tools:ignore="ContentDescription"
            />

       <!-- <ImageView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_marginEnd="50dp"
            app:srcCompat="@drawable/config"
            tools:ignore="ContentDescription"
            android:onClick="configAdicional"/> -->
<ImageButton
    android:id="@+id/btnAbrirPagina"
    android:backgroundTint="#C108F4B1"
    android:layout_width="50dp"
    android:layout_height="60dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="50dp"
    android:src="@drawable/config"
    android:scaleType="centerCrop"
    android:contentDescription="Abrir página"
    android:onClick="configAdicional"
    tools:ignore="ContentDescription,HardcodedText" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="50dp"
            app:srcCompat="@drawable/usr"
            tools:ignore="ContentDescription" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>